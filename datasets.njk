---
layout: layouts/home.njk
eleventyNavigation:
  key: datasets
  order: 3
---
<h1>datasets</h1>

<ol reversed class="postlist" style="counter-reset: start-from {{ (datasets.length) + 1 }}">
{% for dataset in datasets | reverse %}
  <li class="postlist-item{% if dataset.url == url %} postlist-item-active{% endif %}">
    <a href="{{ dataset.url | url }}" class="postlist-link">{% if dataset.title %}{{ dataset.title }}{% else %}<code>{{ dataset.url }}</code>{% endif %}</a>
    {% for tag in dataset.tags | filterTagList %}
      {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
    {% endfor %}
  </li>
{% endfor %}
</ol>
